{
  "name": "evolution-simulator",
  "version": "1.0.0",
  "type": "module",
  "description": "A browser-native C++ simulation game engine with WebAssembly",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:wasm && npm run setup && npm run transform:wasm && vite build",
    "preview": "vite preview",
    "build:wasm": "node scripts/run-build-wasm.js",
    "setup": "node scripts/run-setup-wasm.js",
    "transform:wasm": "node scripts/transform-wasm-js.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.3.10",
    "prettier": "^3.1.1",
    "vite": "^5.0.12",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.4.2"
  }
}
